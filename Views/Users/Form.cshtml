@model UserFormViewModel

@{
    ViewData["Title"] = (!string.IsNullOrEmpty(Model.Id) ? "Edit" : "Add") + " New User" ;
}


<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">@(!string.IsNullOrEmpty(Model.Id) ? "Edit" : "Add") New User</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Users" enctype="multipart/form-data" id="Form">
            @if (!string.IsNullOrEmpty(Model.Id))
            {
                <input type="hidden"  asp-for="@Model.Id"/>
            }
            <div class="mb-10">
                <div class="row">
                    <div class="col-md-5">
                        <div class="row">
                            <div class="col">
                                <div class="mb-5">
                                    <div class="form-floating mb-2">
                                        <input asp-for="@Model.FullName" type="text" class="form-control form-control-solid" placeholder="Title"  />
                                        <label asp-for="@Model.FullName"></label>
                                    </div>
                                    <span asp-validation-for="@Model.FullName" class="text-danger d-block"></span>
                                </div> 

                                <div class="mb-5">
                                    <div class="form-floating mb-2">
                                        <input asp-for="@Model.UserName" type="text" class="form-control form-control-solid" placeholder="Title"  />
                                        <label asp-for="@Model.UserName"></label>
                                    </div>
                                    <span asp-validation-for="@Model.UserName" class="text-danger d-block"></span>
                                </div> 

                                <div class="mb-5">
                                    <div class="form-floating mb-2">
                                        <input asp-for="@Model.Email" type="email" class="form-control form-control-solid" placeholder="Title" />
                                        <label asp-for="@Model.Email"></label>
                                    </div>
                                    <span asp-validation-for="@Model.Email" class="text-danger d-block"></span>
                                </div>

                                <div class="mb-5">
                                    <div class="mb-2">
                                        <select multiple="multiple" class="form-select form-select-solid js-select2" data-placeholder="Select roles" asp-for="@Model.SelectedRoles" asp-items="@Model.Roles">
                                            <option>Select Roles</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="@Model.SelectedRoles" class="text-danger d-block"></span>
                                </div>

                                <div class="mb-5">
                                    <div class="form-floating mb-2">
                                        <input asp-for="@Model.Password" type="password" class="form-control form-control-solid" placeholder="Title" />
                                        <label asp-for="@Model.Password"></label>
                                    </div>
                                    <span asp-validation-for="@Model.Password" class="text-danger d-block"></span>
                                </div>

                                <div class="mb-5">
                                    <div class="form-floating mb-2">
                                        <input asp-for="@Model.ConfirmPassword" type="password" class="form-control form-control-solid" placeholder="Title" />
                                        <label asp-for="@Model.ConfirmPassword"></label>
                                    </div>
                                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger d-block"></span>
                                </div>


                            </div> 
                        </div> 
                    </div> 
                </div> 
            </div> 


        </form>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary" form="Form">
            <span class="indicator-label">
                Save
            </span>
        </button>
        <a class="btn btn-light mx-3" asp-action="Index">Cancel</a>
    </div>
</div>

@section Scripts
{
    $(document).ready(function () {
         $('.js-select2').select2();
    });
}